<!--pages/home/home.wxml-->
<!-- 1.小程序的数据绑定 -->
<view>hello {{name}}</view>
<view>age {{age}}</view>

<!-- 2.列表展示 wx:for -->
<view wx:for="{{students}}" wx:key="id">{{item.name}}-{{item.age}}</view>

<!-- 3.双向数据绑定 -->
<view>计数：{{count}}</view>
<button size="mini" bindtap="countjia">+</button>
<button size="mini" bindtap="countjian">-</button>

<!-- 4.获取用户信息 -->
<button size="mini" open-type="getUserInfo" bindgetuserinfo="handleGetUserInfo">获取用户信息</button>

<open-data type="userNickName"></open-data>
<open-data type="userAvatarUrl"></open-data>

<!-- 5.获取接口数据 -->
<view wx:for="{{list}}" wx:key="id">{{item.title}}</view>